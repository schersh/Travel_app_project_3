
<div class="row">
  <div class="col s3 blue-grey lighten-4">
  <br>
  <h5 class="container center-align">My Favorite Cities</h5>
  {{#each user.cities}}
      <div class="city"><a href="/user/{{user._id}}/city/{{_id}}">{{name}}</a></div>
  {{/each}}
    <div class="container center-align">
      <form action="/user/{{user._id}}/city" method="post">
        <label>Add a New Favorite City</label>
        <input type="text" name="body">
        <input type="submit">
      </form>
    </div>
  </div>
  <div class="col s9 green lighten-4">
    <div class="row">
      <blockquote>You are currently logged in as {{user.email}}. Click on one of your favorite cities to view your saved notes and more travel ideas!</blockquote>
    </div>
    <!-- For each city, it will iterate through their notes-->
    <div class="notes-show-each">
    <h5 class="container center-align">Notes for {{user.city.name}}</h2>
    {{#each user.city.notes}}
      <p class="note">{{body}}</p>
    {{/each}}
    </div>
    <div class="container center-align">
      <form action="/user/{{user._id}}/city/{{_id}}/note" method="post">
        <label>Add a New Note</label>
        <input type="text" name="body">
        <input type="submit">
      </form>
    </div>
  </div>
</div>
