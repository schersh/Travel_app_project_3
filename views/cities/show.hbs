<div class="row">
  <div class="col s3 blue-grey lighten-4">
  <p class="center-align">{{currentUser.local.email}}</p>
  <h5 class="center-align">My Favorite Cities</h5>
  {{#each currentUser.local.cities}}
      <div class="container center-align"><a href="/user/{{user._id}}/city/{{_id}}">{{name}}</a></div>
  {{/each}}
  <br>
    <div class="container center-align">
      <form action="/city" method="post">
        <label>Add a New Favorite City</label>
        <input type="text" name="body">
        <input type="submit">
      </form>
    </div>
  </div>
  <div class="col s9 green lighten-4">
    <div class="row">
      <blockquote>You are currently logged in as {{currentUser.local.email}}. Click on one of your favorite cities to view your saved notes and more travel ideas!</blockquote>
    </div>
    <!-- For each city, it will iterate through their notes-->
    <div class="notes-show-each">
    <h5 class="container center-align">Notes for {{currentUser.city.name}}</h2>
    {{#each currentUser.city.notes}}
      <p class="note">{{body}}</p>
    {{/each}}
    </div>
    <div class="container center-align">
      <form action="/note" method="post">
        <input type="text" name="body">
        <input type="submit">
      </form>
    </div>
  </div>
</div>
